@model IEnumerable<LicoreriaTom.Models.Categoria>

@{
    ViewBag.Title = "Index";
    var totalItems = ViewBag.TotalItems;
    var rowIndex = 1; // Inicia el contador en 1
}

<h4 class="text-center my-4">Categorias</h4>
<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Nueva Categoria
    </a>
</p>

<span class="fw-bold d-block mb-1">@totalItems Registros</span>
<table class="table table-hover table-sm">

    <thead class="bg-opacity-25 bg-secondary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>

                <td>
                    <div class="btn-group" role="group">

                        <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-outline-danger" title="Eliminar">
                            <span class="fas fa-trash-alt"></span>
                        </a>

                        <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-outline-primary" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-outline-secondary" title="Detalles">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                    </div>

                </td>
            </tr>
        }

    </tbody>
</table>



