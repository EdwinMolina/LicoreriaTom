<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink(" LicoreriaApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <!--Menu de Productos-->
                    <li class="nav-item">
                        @Html.ActionLink("Productos", "Index", "ProductosWeb", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <!--Menu de ventas-->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="catalogosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ventas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="catalogosDropdown">
                            <li>@Html.ActionLink("Venta", "Index", "VentasWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Detalle de Venta", "Index", "DetallesVentaWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                    <!--Menu de Compras-->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="catalogosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Compras
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="catalogosDropdown">
                            <li>@Html.ActionLink("Compra", "Index", "ComprasWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Detalle de Compra", "Index", "DetallesCompraWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Proveedor", "Index", "ProveedoresWeb", new { area = "" }, new { @class = "dropdown-item" })</li>

                        </ul>
                    </li>

                    <!--Menu de catalogos-->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="catalogosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catálogos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="catalogosDropdown">
                            <li>@Html.ActionLink("Categorias", "Index", "CategoriasWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Niveles de demanda", "Index", "NivelesDemandaWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tipos de producto", "Index", "TiposProductoWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Roles", "Index", "RolesWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Clientes", "Index", "ClientesWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Trabajadores", "Index", "TrabajadoresWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Usuario", "Index", "UsuariosWeb", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Financiamiento", "Index", "FinanciamientosWeb", new { area = "" }, new { @class = "dropdown-item" })</li>

                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    <!-- Scripts de Popper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
